{
  "name": "codelify",
  "version": "1.0.0",
  "description": "The backend API for codelify app",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "migrate": "sequelize-cli db:migrate",
    "sh": "node util/util.js",
    "migrate:reset": "sequelize-cli db:migrate:undo:all",
    "pretest": "export NODE_ENV=test && npm run migrate:reset && sequelize-cli db:migrate",
    "test": "export NODE_ENV=test && jest --detectOpenHandles --testTimeout=10000 --forceExit",
    "coverage": "jest --coverage --detectOpenHandles  --testTimeout=10000 && cat ./coverage/lcov.info | coveralls --forceExit"
  },
  "author": "Chinedu Orie <nedsoftdeveloper@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@slack/web-api": "^5.6.0",
    "apollo-datasource": "^0.6.4",
    "apollo-server-express": "^2.9.14",
    "app-root-path": "^3.0.0",
    "auto-bind": "^4.0.0",
    "axios": "^0.19.1",
    "ba64": "^3.0.9",
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-resolvers": "^0.3.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^7.15.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1",
    "twitter": "^1.7.1",
    "uuid": "^7.0.2",
    "validator": "^13.0.0",
    "winston": "^3.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/helpers/*",
      "/models/*"
    ],
    "collectCoverage": true,
    "verbose": true
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^26.0.1",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  }
}
